        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <div class="col-md-12">


                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header bg-info">
                                <h4 class="mb-0 text-white">Kullanıcı Kayıt</h4>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Kişisel Bilgiler</h4>
                            </div>
                            <div class="form-body">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Adı</label>
                                                <input type="text" id="name" ng-model="userModel.name" class="form-control" placeholder="Adı">
                                                @*<small class="form-control-feedback"> This is inline help </small>*@
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Soyad</label>
                                                <input type="text" id="surname" ng-model="userModel.surname" class="form-control form-control-danger" placeholder="Soyad">
                                                @*<small class="form-control-feedback"> This field has error. </small>*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Email</label>
                                                <input type="text" id="EmailAddress" ng-model="userModel.EmailAddress" class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Cinsiyet</label>
                                                <select id="roletypeid" class="form-control custom-select" ng-model="userModel.genderid" name="roletypeid">
                                                    <option ng-repeat="x in genderList" value="{{x.id}}">{{x.description}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Doğum Tarihi</label>
                                                <input type="date" ng-model="userModel.birthdate" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Kullanıcı Rolü</label>
                                                <select id="roletypeid" class="form-control custom-select" ng-model="userModel.roletypeid" name="roletypeid">
                                                    <option ng-repeat="x in roleTypeList" value="{{x.id}}">{{x.description}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Role Geçerlilik Tarihi</label>
                                                <input type="date" ng-model="userModel.roleexpiresdate" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <h4 class="card-title mt-5">Adres Bilgileri</h4>
                                </div>
                                <hr>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">İl</label>
                                                <select id="cityId" class="form-control custom-select" ng-model="userModel.cityName" name="cityId">
                                                    <option ng-repeat="x in cityList" value="{{x.cityId}}">{{x.cityName}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <div class="custom-control custom-switch">
                                                    <input ng-model="userModel.isemailsend" type="checkbox" class="custom-control-input" id="customSwitch1">
                                                    <label class="custom-control-label" for="customSwitch1">E mail gönderilsin?</label>
                                                </div>
                                                <div class="custom-control custom-switch">
                                                    <input ng-model="userModel.isphonesend" type="checkbox" class="custom-control-input" id="customSwitch2">
                                                    <label class="custom-control-label" for="customSwitch2">Telefona mesaj gönderilsin?</label>
                                                </div>
                                            </div>
                                        </div>


                                        <!--/span-->
                                        <!--/span-->
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Eğitim Durumu</label>
                                                <select id="roletypeid" class="form-control custom-select" ng-change="onChanageEdcationStatu()" ng-model="userModel.educationstatusid" name="roletypeid">
                                                    <option ng-repeat="x in educationTypeList" value="{{x.id}}">{{x.description}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div ng-show="showHigSchoolType" class="form-group">
                                                <label class="control-label">Okul Adı</label>
                                                <select id="highschooltypeid" class="form-control" name="highschooltypeid" required
                                                        ng-model="userModel.highschooltypeid"
                                                        ng-options="x.id as x.schoolName for x in highSchollList"></select>
                                            </div>
                                            <div ng-show="!showHigSchoolType" class="form-group">
                                                <label class="control-label">Üniversite</label>
                                                <select id="universityid" class="form-control" name="universityid" required
                                                        ng-model="userModel.universityid"
                                                        ng-options="x.id as x.universityName for x in universityList"></select>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div ng-show="!showHigSchoolType" class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Fakülte</label>
                                                <select id="facultyid" class="form-control" name="facultyid" required
                                                        ng-model="userModel.facultyid"
                                                        ng-options="x.id as x.FacultyName for x in facultyList">
                                                </select>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Bölüm</label>
                                                <select id="cityId" class="form-control" name="departmentid" required
                                                        ng-model="userModel.departmentid"
                                                        ng-options="x.id as x.DepartmentName for x in departmentList"></select>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row">
                                        <div ng-show="showHigSchoolType" class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Sınıf</label>
                                                <select id="roletypeid" class="form-control custom-select" ng-model="userModel.roletypeid" name="roletypeid">
                                                    <option ng-repeat="x in classTypeList" value="{{x.id}}">{{x.description}}</option>
                                                </select>

                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Referans kodu</label>
                                                <input ng-model="userModel.referancecode" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>

                                    <!--/row-->

                                </div>
                                <div class="form-actions">
                                    <div class="card-body">
                                        <button ng-disabled="showSaveLoading" ng-click="onClikSave()" class="btn btn-success">
                                            <span ng-show="showSaveLoading"><i class="fa fa-spinner fa-spin"></i></span>
                                            Kaydet
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

