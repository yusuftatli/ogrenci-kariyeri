<style>
    body > div.ui-dialog.ui-corner-all.ui-widget.ui-widget-content.ui-front.ui-draggable.ui-resizable{
        z-index: 9999 !important;
    }
</style>

<div id="vue-company">
    <div class="modal-body">
        <div class="col-lg-12">
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Şirket Kısa Adı</label>
                                <input type="text" id="companyShortName" v-model="company.shortName" class="form-control" placeholder="Şirket Kısa Adı">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Seo Url</label>
                            <input type="text" id="companySeoUrl" class="form-control" disabled :value="regexSeo(company.shortName)" />
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">    
                                <label class="control-label">Sektör Tipi</label>
                                <select id="sectorTypeId" class="form-control" v-model="company.sectorType">
                                    <option value="1">Kamu</option>
                                    <option value="2">Özel</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Sektör</label>
                                <select id="sectorId" class="form-control" v-model="company.sectorId" name="eventId">
                                    <option v-for="x in sectorTypes" value="{{x.id}}">{{x.description}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Açıklama</label>
                                <textarea rows="3" v-model="company.description" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Şirket Header Resmi</label>
                                <input type="text" class="form-control" id="roxyFieldAnnouncement" v-model="company.headerImage" onclick="openCustomRoxy2('.roxyFieldAnnouncement')" />
                            </div>
                        </div>
                    </div>
                </div>
                <hr>

            </div>
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Web Sitesi</label>
                                <input v-model="company.webSite" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Telefon Numarası</label>
                                <input rows="3" v-model="company.phoneNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">E-Posta</label>
                                <input v-model="company.emailAddress" class="form-control" />
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" v-on:click="addOrUpdateCompany()">Kaydet</button>
    </div>
</div>
<span id="company-info-area" class="hidden" data-company="@ViewBag.CompanyId"></span>

<script src="~/Template/PViews/Company/company.js"></script>
