<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="mb-0 text-white">Şirket Kayıt</h4>
            </div>
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Şirket Kısa Adı</label>
                                <input type="text" id="companyShortName" ng-model="companyModel.ShortName" class="form-control" placeholder="Şirket Kısa Adı">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Seo Url</label>
                            <input type="text" id="companySeoUrl" class="form-control" ng-disabled="true" value="{{RegexSeo(companyModel.ShortName)}}" />
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Sektör Tipi</label>
                                <select id="sectorTypeId" class="form-control" ng-model="companyModel.SectorType">
                                    <option value="1">Kamu</option>
                                    <option value="2">Özel</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Sektör</label>
                                <select id="sectorId" class="form-control" ng-model="companyModel.SectorId" name="eventId">
                                    <option ng-repeat="x in sectorTypes" value="{{x.id}}">{{x.description}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Açıklama</label>
                                <textarea rows="3" ng-model="companyModel.Description" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 p-l-0 p-t-20">
                            <div class="form-group">
                                <label>Şirket Header Resmi</label>
                                <input type="text" class="form-control" id="roxyField" onclick="openCustomRoxy2('#roxyCustomPanel2')" />
                            </div>
                        </div>
                    </div>
                </div>
                <hr>

            </div>
        </div>
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="mb-0 text-white">Şirket Bilgileri</h4>
            </div>
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Web Sitesi</label>
                                <input ng-model="companyModel.WebSite" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Telefon Numarası</label>
                                <input rows="3" ng-model="companyModel.PhoneNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">E-Posta</label>
                                <input ng-model="companyModel.EmailAddress" class="form-control" />
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="mb-0 text-white">Sosyal Medya Hesapları</h4>
            </div>
            <div class="form-body">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Facebook</label>
                                <input type="text" class="form-control" ng-model="companyModel.Facebook" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Linkedin</label>
                                <input type="text" class="form-control" ng-model="companyModel.Linkedin" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Instagram</label>
                                <input type="text" class="form-control" ng-model="companyModel.Instagram" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions text-right">
                    <div class="card-body">
                        <button ng-disabled="showSaveLoading" ng-click="onClikSave()" class="btn btn-success">
                            <span ng-show="showSaveLoading"><i class="fa fa-spinner fa-spin"></i></span>
                            Kaydet
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<span id="company-info-area" class="hidden" data-company="@ViewBag.CompanyId"></span>