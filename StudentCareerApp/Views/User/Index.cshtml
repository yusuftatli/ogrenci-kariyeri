                                    {
                                        <div class="form-row">
                                            <div class="form-group col-md-12">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col">
                                                <label>Eğitim Durumu</label>
                                                <select id="educationType" class="form-control" name="EducationType" required>
                                                    <option value="">Seçim yapınız...</option>
                                                    @foreach (EducationType x in (EducationType[])Enum.GetValues(typeof(EducationType)))
                                                    {
                                                        <option value="@((long)x)">@x.GetDescription()</option>
                                                    }
                                                </select>
                                            </div> <!-- form-group end.// -->
                                            <!-- form-group end.// -->
                                        </div> <!-- form-row.// -->
                                        <div class="template-selected-highschool hidden">
                                            <div class="form-row">
                                                <div class="form-group col">
                                                    <label>Lise</label>
                                                    <select class="form-control" name="HighSchoolTypeId">
                                                        <option value="">Seçiniz...</option>
                                                        @foreach (var x in Model.Definitions.HighSchools)
                                                        {
                                                            <option value="@x.Id">@x.SchoolName</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="template-selected-university hidden">
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label>Üniversite</label>
                                                    <select class="form-control" name="UniversityId">
                                                        <option value="">Seçiniz...</option>
                                                        @foreach (var x in Model.Definitions.Universities)
                                                        {
                                                            <option value="@x.Id">@x.UniversityName</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>Fakülte</label>
                                                    <select class="form-control" name="FacultyId">
                                                        <option value="">Seçiniz...</option>
                                                        @foreach (var x in Model.Definitions.Faculties)
                                                        {
                                                            <option value="@x.Id">@x.FacultyName</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label>Bölüm</label>
                                                    <select class="form-control" name="DepartmentId">
                                                        <option value="">Seçiniz...</option>
                                                        @foreach (var x in Model.Definitions.Departments)
                                                        {
                                                            <option value="@x.Id">@x.DepartmentName</option>
                                                        }
                                                    </select>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="form-row template-still-student hidden">
                                            <div class="form-group col-md-6">
                                                <label>Hala öğrenci misiniz?</label><br />
                                                <input name="IsStudent" type="checkbox" id="stillStudent" class="js-switch stillStudent" data-color="#00c292" />
                                            </div>
                                            <div class="form-group col-md-6">
                                                <div class="showClasses hidden">
                                                    <label>Sınıf</label>
                                                    <select class="form-control" name="ClassId">
                                                        <option value="">Seçiniz...</option>
                                                        @foreach (var x in Model.Definitions.Classes)
                                                        {
                                                            <option value="@x.Id">@x.Description</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class=" fade tab-pane" id="messages">
                            <div class="ts-grid-box clearfix ts-category-title">
                                <h2 class="ts-title float-left">Onaylı Yorumlar (12)</h2>
                                <i class="fa fa-chevron-up fa-2x pull-right pointer" for="approved-comments"></i>
                            </div>
