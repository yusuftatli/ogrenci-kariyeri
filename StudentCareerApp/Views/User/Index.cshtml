                                            <div class="media-body text-center" style="padding-top:10px;">
                                                <a href="tel:@Model.User.PhoneNumber" style="color:unset !important;" id="user-phone">@Model.User.PhoneNumber</a>
                                                <i class="fa fa-edit edit-icon" for="user-phone"></i>
                                            </div>

                                        </div>
                                        <div class="col-lg">
                                            <div class="media-left col-md-12 text-center"><i class="fa fa-envelope fa-3x" style="color:#e91e63;"></i></div>
                                            <div class="media-body text-center" style="padding-top:10px;">
                                                <a id="user-mail" href="mailto:@Model.User.EmailAddress" style="color:unset !important;">@Model.User.EmailAddress</a>
                                                <i class="fa fa-edit edit-icon" for="user-mail"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
