@using SCA.Common;
@using SCA.Entity.Enums;
@model SCA.Entity.DTO.UserWithAllUniversityInformationDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var facebook = Model.SocialMedias.Find(x => x.SocialMediaType == SocialMediaType.Facebook)?.Url.Split("/").Last();
    var instagram = Model.SocialMedias.Find(x => x.SocialMediaType == SocialMediaType.Instagram)?.Url.Split("/").Last();
    var twitter = Model.SocialMedias.Find(x => x.SocialMediaType == SocialMediaType.Twitter)?.Url.Split("/").Last();
    var linkedin = Model.SocialMedias.Find(x => x.SocialMediaType == SocialMediaType.Linkedin)?.Url.Split("/").Last();
}

<style>
    .edit-icon, .edit-icon-input {
        cursor: pointer;
        margin-left: 10px;
        color: #e91e63;
    }

    .text-unset {
        text-transform: unset !important;
    }

    .green-icon {
        color: #6cba40;
    }

    .red-icon {
        color: #e91e63;
    }

    .social-media-icon {
        padding-right: 10px;
    }

    p > span > br {
        content: "A" !important;
        display: block !important;
        margin-bottom: 10px !important
    }

    .pointer {
        cursor: pointer;
    }

    .ce-block__content {
        max-width: 100%;
    }

    .ce-paragraph {
        margin-right: 30px;
        text-shadow: unset !important;
    }

    .codex-editor__redactor {
        padding-bottom: 10px !important;
    }

    [contenteditable=true] {
        text-shadow: 0px 0px 5px 0px grey;
    }

    .editable-area {
        border: 1px solid #ced4da;
        border-radius: .25rem;
        padding: 3px 10px;
        display: inherit;
    }

    .social-editor {
        position: absolute;
        max-width: 150px;
        margin-top: 10px;
    }
</style>

<!-- block wrapper start-->
<section class="block-wrapper p-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="featured-tab-item">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs row featured-tab-post" role="tablist">
                        <li role="presentation" class="col-lg">
                            <a href="#home" class="active" aria-controls="home" role="tab" data-toggle="tab">
                                <div class="post-content">
                                    <h3 class="post-title">
                                        Profil Bilgileri
                                    </h3>
                                </div>
                            </a>
                        </li>
                        <li role="presentation" class="col-lg">
                            <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">
                                <div class="post-content">
                                    <h3 class="post-title">
                                        Eğitim Bilgileri
                                    </h3>
                                </div>
                            </a>
                        </li>
                        <li role="presentation" class="col-lg">
                            <a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">
                                <div class="post-content">
                                    <h3 class="post-title">
                                        Yorumlar
                                    </h3>
                                    <ul class="post-meta-info">
                                        <li class="cat-name">
                                            <i class="fa fa-thumbs-up green-icon"></i>
                                        </li>
                                        <li>
                                            12
                                        </li>
                                        <li class="cat-name">
                                            <i class="fa fa-thumbs-down red-icon"></i>
                                        </li>
                                        <li>
                                            4
                                        </li>
                                    </ul>
                                </div>
                            </a>
                        </li>
                        <li role="presentation" class="col-lg">
                            <a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">
                                <div class="post-content">
                                    <h3 class="post-title">
                                        Takip
                                    </h3>
                                    <ul class="post-meta-info">
                                        <li class="cat-name">
                                            <i class="fa fa-handshake"></i>
                                        </li>
                                        <li>
                                            126
                                        </li>
                                        <li class="cat-name">
                                            <i class="fa fa-praying-hands"></i>
                                        </li>
                                        <li>
                                            25
                                        </li>
                                    </ul>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                            <div class="ts-grid-box">
                                <div class="post-content">
                                    <h4>
                                        <a id="user-name">@Model.User.Name @Model.User.Surname</a><i class="fa fa-edit edit-icon" for="user-name"></i>
                                        <i id="user-save" class="fa fa-save pull-right red-icon" style="cursor:pointer;"></i>
                                        <i class="fa fa-cogs pull-right social-media-icon red-icon"></i>
                                        <i class="fa fa-linkedin pull-right social-media-icon"></i>
                                        <i class="fa fa-twitter pull-right social-media-icon"></i>
                                        <i class="fa fa-instagram pull-right social-media-icon"></i>
                                        <i class="fa fa-facebook pull-right social-media-icon"></i>
                                    </h4>
                                    <p id="user-description">
                                    </p>
                                    <div class="text-center pb-5 pt-3">
                                        <ul class="footer-social">
                                            <li class="ts-facebook">
                                                <a href="https://www.facebook.com/@facebook" target="_blank" rel="nofollow">
                                                    <i class="fa fa-facebook"></i>
                                                    <a id="user-facebook" class="text-unset">@facebook</a>
                                                </a>
                                                <i class="fa fa-edit edit-icon" for="user-facebook"></i>
                                            </li>
                                            <li class="ts-instagram-gradient">
                                                <a href="https://www.instagram.com/@instagram" target="_blank" rel="nofollow">
                                                    <i class="fa fa-instagram"></i>
                                                    <a id="user-instagram" class="text-unset">@instagram</a>
                                                </a>
                                                <i class="fa fa-edit edit-icon" for="user-instagram"></i>
                                            </li>
                                            <li class="ts-twitter">
                                                <a href="https://www.twitter.com/@twitter" target="_blank" rel="nofollow">
                                                    <i class="fa fa-twitter"></i>
                                                    <a id="user-twitter" class="text-unset">@twitter</a>
                                                </a>
                                                <i class="fa fa-edit edit-icon" for="user-twitter"></i>
                                                @*<input type="text" class="form-control social-editor hidden" id="user-twitter" value="https://www.twitter.com/ogrencikariyeri" />*@
                                            </li>
                                            <li class="ts-linkedin">
                                                <a href="https://www.linkedin.com/company/@linkedin" target="_blank" rel="nofollow">
                                                    <i class="fa fa-linkedin"></i>
                                                    <a id="user-linkedin" class="text-unset">@linkedin</a>
                                                </a>
                                                <i class="fa fa-edit edit-icon" for="user-linkedin"></i>
                                            </li>
                                        </ul>
                                    </div>

