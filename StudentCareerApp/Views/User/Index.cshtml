                                        </div>
                                        <!-- ts-grid-box end-->
                                    </div>
                                }
                            </div>
                            <div class="ts-grid-box clearfix ts-category-title">
                                <h2 class="ts-title float-left">Onay Bekleyen Yorumlar (12)</h2>
                                <i class="fa fa-chevron-down fa-2x pull-right pointer" for="waiting-comments"></i>
                            </div>
                            <div class="row" id="waiting-comments" style="display:none;">
                                @for (int i = 0; i < 9; i++)
                                {
                                    <div class="col-lg-3 pr-10 pb-5">
                                        <div class="ts-grid-box ts-col-box">
                                            <div class="item">
                                                <a class="post-cat ts-green-bg" href="#">Sports</a>
                                                <div class="post-content">
