@model  SCA.Entity.DTO.CompanyClubInformationDto

<section class="block-wrapper mt-15">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ts-grid-box">
                    <div class="author-box author-box-item">
                        <img class="author-img" src="@(!string.IsNullOrEmpty(Model.CompanyUserImage) ? Model.CompanyUserImage : "/images/avatar/man.png")" alt="Öğrenci Kariyeri - Şirket Bilgileri - @Model.ShortName">
                        <div class="author-info">
                            <div class="author-name">
                                <h4>@Model.ShortName</h4>
                            </div>
                            <div class="clearfix"></div>
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
