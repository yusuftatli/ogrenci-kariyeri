
@{

   Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- block post area start-->
<section class="block-wrapper mt-15">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 pr-0">
                <div class="ts-overlay-style featured-post featured-post-style">
                    <div class="item" style="background-image:url(images/news/travel/travel3.jpg)">
                        <a class="post-cat ts-orange-bg" href="#">Travel</a>
                        <div class="overlay-post-content">
                            <div class="post-content">

                                <h2 class="post-title lg">
                                    <a href="#">Clothing and Accessories for the Fashionable Crypto Trader</a>
                                </h2>
                                <ul class="post-meta-info">
                                    <li>
                                        <i class="fa fa-clock-o"></i>
                                        March 21, 2019
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-comments"> </i> Comments
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--/ Featured post end -->
                    </div>
                </div>
                <!-- ts overlay end-->
            </div>
            <!-- col end-->
            <div class="col-lg-4 ts-grid-style-3 featured-post p-1">
                <div class="ts-overlay-style ">
                    <div class="item" style="background-image: url(images/news/fashion/fashion5.jpg);">
                        <a class="post-cat ts-pink-bg" href="#">Fashion</a>
                        <div class="overlay-post-content">
                            <div class="post-content">

                                <h3 class="post-title md">
                                    <a href="#">20 More Crypto Adoption Cases Throughout the World</a>
                                </h3>
                                <span class="post-date-info">
                                    <i class="fa fa-clock-o"></i>
                                    March 21, 2019
                                </span>
                            </div>
                        </div>
                    </div>
                    <!-- end item-->
                </div>
                <!-- ts overly end-->
                <div class="ts-overlay-style">
                    <div class="item" style="background-image: url(images/news/sports/sports2.jpg);">
                        <a class="post-cat ts-green-bg" href="#">Sports</a>
                        <div class="overlay-post-content">
                            <div class="post-content">

                                <h3 class="post-title md">
                                    <a href="#">Sports And Altcoins Signaling Bearish Continuation</a>
                                </h3>
                                <span class="post-date-info">
                                    <i class="fa fa-clock-o"></i>
                                    March 21, 2019
                                </span>
                            </div>
                        </div>
                    </div>
                    <!-- end item-->
                </div>
                <!-- ts overly end-->
            </div>
        </div>
    </div>
    <!-- container end-->
</section>
<!-- block area end-->
<!-- post wraper start-->
<section class="block-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                @await Component.InvokeAsync("MostPopularItems", new { count = 10 });
                @await Component.InvokeAsync("WatchNow", new { count = 4 })
                @await Component.InvokeAsync("HotTopics", new { count = 5 })
            </div>
            <div class="col-lg-3">
                <div class="right-sidebar">
                    @await Component.InvokeAsync("SocialMedia")
                    @await Component.InvokeAsync("PopularContents")
                    @await Component.InvokeAsync("PopularCategories")
                    @await Component.InvokeAsync("NewsletterForm")
                </div>
            </div>
            <!-- col end-->
        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
<!-- post wraper end-->
@await Component.InvokeAsync("NewsWithSlider", 10)
<!-- post wraper end-->
<section class="block-wrapper mt-15 xs-mb-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                @await Component.InvokeAsync("NewsWith2Columns", 20)
            </div>
            <div class="col-lg-3">
                <div class="right-sidebar">
                    @await Component.InvokeAsync("Banner", new { url = "#", imagePath = "images/banner/sidebar-banner4.jpg" })
                    @await Component.InvokeAsync("RecentAndFavorites")
                    @await Component.InvokeAsync("Tags")
                    @await Component.InvokeAsync("Banner", new { url = "#", imagePath = "images/banner/sidebar-banner1.jpg" })
                </div>
            </div>
        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
<!-- Block wraper end-->
