@model List<SCA.Entity.DTO.ContentForHomePageDTO>

@{
    ViewData["Title"] = "Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ts-title.full-size-ts::before {
        left: 0;
    }

    .full-size-ts > span {
        padding-left: 20px;
    }

    .ts-single-inst img {
        height: 190px !important;
    }

    .ts-social-list-item ul {
        margin:0 !important;
        text-align:center;
    }
    .pb-110{
        padding-bottom:110px;
    }
</style>

<link rel="stylesheet" href="/css/jquery.mCustomScrollbar.css">

@await  Component.InvokeAsync("CompanyClubHeader", new { seoUrl = ViewBag.SeoUrl})

@await  Component.InvokeAsync("ImageGalery", new { companyClubId = ViewBag.CompanyId})

@await  Component.InvokeAsync("Anouncement", new { seoUrl = ViewBag.SeoUrl})

@await  Component.InvokeAsync("CompanyClubInformation", new { seoUrl = ViewBag.SeoUrl})

@await  Component.InvokeAsync("YoutubePlaylist", new { seourl = ViewBag.SeoUrl})

<section class="block-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                @await Component.InvokeAsync("NewsWith2Columns", Model)
                
            </div>
            <div class="col-lg-3">
                <div class="right-sidebar">
                    @await Component.InvokeAsync("SocialMedia")
                    @await Component.InvokeAsync("PopularContents", new { count = 5 })
                    @await Component.InvokeAsync("PopularCategories")
                </div>
            </div>
        </div>
    </div>
</section>

